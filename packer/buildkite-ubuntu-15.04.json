{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-370c225d",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "buildkite-{{isotime | clean_ami_name}}",
      "ami_description": "A basic ubuntu image with a Buildkite agent running",
      "ami_groups": ["all"]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "conf",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "scripts/install-aws-tools.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-docker.sh"
    }
  ]
}
