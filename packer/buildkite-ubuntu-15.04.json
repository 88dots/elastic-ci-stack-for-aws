{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-cf09e8a4",
      "instance_type": "m3.medium",
      "ssh_username": "ubuntu",
      "ami_name": "buildkite-{{isotime | clean_ami_name}}",
      "ami_description": "A docker host image based on Ubuntu 15.04 for buildkite-elastic",
      "ami_block_device_mappings": [{
        "device_name": "/dev/sdf",
        "volume_size": 30,
        "volume_type": "gp2"
      }],
      "launch_block_device_mappings": [{
        "device_name": "/dev/sdf",
        "volume_size": 30
      }],
      "tags": {
        "Release": "15.04 LTS",
        "Docker": "1.6.2",
        "Docker-Compose": "1.3.0RC2"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "conf",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "scripts/install-cfn-tools.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-docker.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-buildkite.sh"
    }
  ]
}