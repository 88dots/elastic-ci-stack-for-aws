{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-cf09e8a4",
      "instance_type": "m3.medium",
      "spot_price": "auto",
      "spot_price_auto_product": "Linux/UNIX",
      "ssh_username": "ubuntu",
      "ami_name": "ubuntu-15.04-docker-{{isotime | clean_ami_name}}",
      "tags": {
        "Release": "15.04 LTS",
        "Docker": "1.6.2",
        "Docker-Compose": "1.3.0RC2"
      }
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "conf",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "scripts/install-cfn-tools.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-docker.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-buildkite.sh"
    }
  ]
}